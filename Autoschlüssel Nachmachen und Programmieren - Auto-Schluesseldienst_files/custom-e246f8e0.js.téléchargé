document.addEventListener("DOMContentLoaded",function(){const c=document.querySelectorAll(".navbar-burger"),e=document.querySelectorAll(".navbar-menu");if(c.length&&e.length)for(var t=0;t<c.length;t++)c[t].addEventListener("click",function(){for(var r=0;r<e.length;r++)e[r].classList.toggle("hidden")});const d=document.querySelectorAll(".navbar-close"),l=document.querySelectorAll(".navbar-backdrop");if(d.length)for(var t=0;t<d.length;t++)d[t].addEventListener("click",function(){for(var n=0;n<e.length;n++)e[n].classList.toggle("hidden")});if(l.length)for(var t=0;t<l.length;t++)l[t].addEventListener("click",function(){for(var n=0;n<e.length;n++)e[n].classList.toggle("hidden")})});document.addEventListener("DOMContentLoaded",function(){const c=document.querySelectorAll(".lightbox-trigger"),e=document.getElementById("lightbox-overlay"),t=document.getElementById("lightbox-image"),d=document.getElementById("prev"),l=document.getElementById("next"),r=document.getElementById("close");let n=0;function a(o){t.src=c[o].src,n=o}c.forEach((o,i)=>{o.addEventListener("click",function(){e.classList.remove("hidden"),a(i)})}),r.addEventListener("click",function(){e.classList.add("hidden")}),e.addEventListener("click",function(o){o.target===e&&e.classList.add("hidden")}),d.addEventListener("click",function(o){o.stopPropagation();const i=n-1<0?c.length-1:n-1;a(i)}),l.addEventListener("click",function(o){o.stopPropagation();const i=(n+1)%c.length;a(i)})});
